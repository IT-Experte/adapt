set -e

usage() {
	echo "
Example usage
   adapt install -r vivid -p maas
   adapt run -r wily -c "juju version"
   adapt alias -r wily -c juju
   adapt unalias -c juju
   adapt shell -d centos -r 6
   adapt list
"
	exit 0
}

PKG="adapt"
CMD="$1"
[ -n "$1" ] || usage
shift
case "$(uname -m)" in
	x86_64)
		ARCH="amd64"
	;;
	i*86)
		ARCH="i386"
	;;
esac
DISTRO="ubuntu"
RELEASE=$(distro-info --devel)
while [ ! -z "$1" ]; do
	case "$1" in
		-c|--command)
			COMMAND="$2"
			shift 2
		;;
		--debug)
			set -x
			shift
		;;
		-d|--distro)
			DISTRO="$2"
			shift 2
		;;
		-p|--packages)
			PACKAGES="$2"
			shift 2
		;;
		-r|--release)
			RELEASE="$2"
			shift 2
		;;
		-h|--help|*)
			usage
		;;
	esac
done
case "$CMD" in
	help|-h|--help)
		usage
	;;
esac

# Launch a new image, only if necessary
NAME="$PKG-$DISTRO-$RELEASE"
if ! match=$(lxc list | grep " $NAME "); then
	lxc remote add images images.linuxcontainers.org 2>/dev/null || true
	lxc launch images:$DISTRO/$RELEASE/$ARCH/default "$NAME"
fi

case "$CMD" in
	alias)
		mkdir -p "$HOME/.$PKG"
cat >"$HOME/.$PKG/$COMMAND" <<EOF
#!/bin/sh
lxc exec $NAME -- $COMMAND \$@
EOF
		chmod +x "$HOME/.$PKG/$COMMAND"
		sed -i -e ":PATH=.*$HOME/.$PKG:d" $HOME/.bashrc
		echo "PATH=$HOME/.$PKG:$PATH" >> $HOME/.bashrc
	;;
	install)
		case "$DISTRO" in
			ubuntu|debian)
#				lxc exec $NAME -- apt-get update
				lxc exec $NAME -- apt-get install $PACKAGES
			;;
			centos|fedora)
				lxc exec $NAME -- yum install $PACKAGES
			;;
		esac
	;;
	list)
		lxc list | grep " $PKG-"
	;;
	run)
		lxc exec $NAME -- $COMMAND
	;;
	shell)
		lxc exec $NAME -- $SHELL
	;;
	unalias)
		rm -f "$HOME/.$PKG/$COMMAND"
	;;
	*)
		usage
	;;
esac
